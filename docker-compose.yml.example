version: "3.8"

services:
  app:
    build: .
    image: proto/php:dev
    working_dir: /var/www
    volumes:
      - ./src:/var/www
    environment:
      - APP_KEY=base64:82CmymSiKDcDcseC+uczN+QSdIc4hEl2dAbECD9efBY=
      - APP_DEBUG=true
      - APP_NAME=proto
      - DB_CONNECTION=pgsql
      - DB_PORT=5432
      - DB_HOST=db
      - DB_DATABASE=proto
      - DB_USERNAME=proto
      - DB_PASSWORD=proto

  db:
    image: postgres:alpine
    environment:
      - POSTGRES_DB=proto
      - POSTGRES_USER=proto
      - POSTGRES_PASSWORD=proto
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U proto -d proto"]
      interval: 10s
      timeout: 5s
      retries: 5

  node:
    image: node:alpine
    working_dir: /home/node
    volumes:
      - ./src:/home/node
    command: ['yarn', 'run', 'watch']

  web:
    image: nginx:alpine
    volumes:
      - ./src:/var/www
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
    ports:
      - 80:80